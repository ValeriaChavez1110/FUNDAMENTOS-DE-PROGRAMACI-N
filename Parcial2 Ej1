#include <iostream>
using namespace std;

int main()
{
    int opcion;
    float num1, num2, resultado;

    do {
        cout << "MENU" << endl;
        cout << "1. Suma" << endl;
        cout << "2. Resta" << endl;
        cout << "3. Multiplicacion" << endl;
        cout << "0. Salir" << endl;
        cout << "Ingrese una opcion: ";
        cin >> opcion;

        resultado = 0;

        switch (opcion) {

        case 1:
            cout << "Ingrese el primer numero: ";
            cin >> num1;
            cout << "Ingrese el segundo numero: ";
            cin >> num2;
            resultado = num1 + num2;
            cout << "Resultado de la suma: " << resultado << endl;
            break;

        case 2:
            cout << "Ingrese el primer numero: ";
            cin >> num1;
            cout << "Ingrese el segundo numero: ";
            cin >> num2;
            resultado = num1 - num2;
            cout << "Resultado de la resta: " << resultado << endl;
            break;

        case 3:
            cout << "Ingrese el primer numero: ";
            cin >> num1;
            cout << "Ingrese el segundo numero: ";
            cin >> num2;
            resultado = num1 * num2;
            cout << "Resultado de la multiplicacion: " << resultado << endl;
            break;

        case 0:
            cout << "Salir" << endl;
            break;

        default:
            cout << "Error" << endl;
        }

    } while (opcion != 0); 

    return 0;
}
