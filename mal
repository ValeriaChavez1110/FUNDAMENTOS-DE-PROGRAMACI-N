#include <iostream>
using namespace std;

int main()
{
    int N, a, Z, digito, i= 1;
    do {
        cout<<"Ingrese un numero: ";
        cin>> N;
    } while (N<=0);
    int total[N];
    for (int i=0; i<N; i++) {
        cout<<"Ingrese el numero: "<< i + 1 <<endl;
        cin>>a;
        Z=0;
        while (a>0) {
        digito= a%10;
        Z=Z*10+digito;
        a=a/10;
        }
        total[i]=Z;
    }
    cout<<"El numero invertido es: "<<Z;
    for (int i=0; i<N; i++) {
        cout<< total[i]<<endl;
    }

    return 0;
}
