#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    int opcion;
    float Area=0,p, b, a, r, l;
    do {
        cout<<"MENU"<<endl;
        cout<< "AREAS"<<endl;
		cout<< "1.Area del triangulo"<<endl;
		cout<< "2.Area del cuadrado"<<endl;
		cout<< "3.Area de la circunferencia"<<endl;
		cout<< "0.Salir"<<endl;
		cout<<"Ingrese una opcion: "<< endl;
		cin>>opcion;
		switch (opcion) {
		    case 1: 
		    cout<<"Ingrese la base: "<<endl;
		    cin>>b;
		    cout<<"Ingrese la altura: "<<endl;
		    cin>>a;
		    Area=(b*a)/2;
		    cout<<"Area: "<<Area<<endl;
		    break;
		    case 2:
		    cout<<"Ingrese el lado: "<<endl;
		    cin>>l;
		    Area=pow(l,2);
		    cout<<"Area: "<<Area<<endl;
		    break;
		    case 3: 
		    p= 3.1416;
		    cout<<"Ingrese radio: "<<endl;
		    cin>>r;
		    Area=p*(pow (r,2));
		    cout<<"Area: "<<Area<<endl;
		    break;
		    case 0:
		    cout<<"Salir";
		    break;
		    default:
		    cout<<"Error";
		}
    } while (opcion!=0);
    return 0;
}
