#include <iostream>
using namespace std;

int main()
{
    int N, suma=0, digito;
    do {
        cout<<"Ingrese un numero: ";
        cin>> N;
    } while (N<=0);
    while (N>0) {
        digito= N%10;
        suma=suma+digito;
        N=N/10;
    }
    cout<<"La suma de digitos es: "<<suma;

    return 0;
}
